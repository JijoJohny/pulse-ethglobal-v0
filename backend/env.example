# =============================================================================
# PULSE-08 BACKEND CONFIGURATION
# =============================================================================

# Server Configuration
NODE_ENV=development
BACKEND_PORT=3001
BACKEND_HOST=localhost

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# PostgreSQL Database (Legacy - for direct connections if needed)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=pulse08
DB_USERNAME=pulse08_user
DB_PASSWORD=your_secure_password_here
DB_SSL=false

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# ROOTSTOCK BLOCKCHAIN CONFIGURATION
# =============================================================================

# Rootstock Network
ROOTSTOCK_NETWORK=testnet
ROOTSTOCK_RPC_URL=https://public-node.testnet.rsk.co
ROOTSTOCK_CHAIN_ID=31

# Contract Deployer (for admin operations)
CONTRACT_DEPLOYER_PRIVATE_KEY=your_private_key_here

# Contract Addresses (set after deployment)
CLMSR_MARKET_CORE_ADDRESS=
CLMSR_POSITION_ADDRESS=

# =============================================================================
# THE GRAPH CONFIGURATION
# =============================================================================

# The Graph Subgraph
THE_GRAPH_NETWORK=testnet
THE_GRAPH_SUBGRAPH_URL=https://api.thegraph.com/subgraphs/name/pulse-08/pulse-08-testnet
THE_GRAPH_API_KEY=

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT Secret (generate a strong secret)
JWT_SECRET=your_jwt_secret_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log Level (error, warn, info, debug)
LOG_LEVEL=info

# Log File Paths
LOG_ERROR_FILE=logs/error.log
LOG_COMBINED_FILE=logs/combined.log

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM=Pulse-08 <noreply@pulse08.com>

# =============================================================================
# MONITORING CONFIGURATION (Optional)
# =============================================================================

# Sentry DSN (for error tracking)
SENTRY_DSN=

# Prometheus Metrics
PROMETHEUS_PORT=9090

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Enable Debug Mode
DEBUG=false

# Enable Request Logging
ENABLE_REQUEST_LOGGING=true

# Enable WebSocket Logging
ENABLE_WEBSOCKET_LOGGING=true

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================

# Enable Compression
ENABLE_COMPRESSION=true

# Enable Helmet Security
ENABLE_HELMET=true

# Trust Proxy (for load balancers)
TRUST_PROXY=false

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable Analytics
ENABLE_ANALYTICS=true

# Enable User Profiles
ENABLE_USER_PROFILES=true

# Enable Market Creation
ENABLE_MARKET_CREATION=false

# Enable Position Operations
ENABLE_POSITION_OPERATIONS=true

# Enable WebSocket
ENABLE_WEBSOCKET=true

# =============================================================================
# EXTERNAL API CONFIGURATION
# =============================================================================

# CoinGecko API (for price data)
COINGECKO_API_URL=https://api.coingecko.com/api/v3
COINGECKO_API_KEY=

# Chainlink Oracle (for price feeds)
CHAINLINK_ORACLE_ADDRESS=
CHAINLINK_ORACLE_ABI=

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================

# Cache TTL (Time To Live) in seconds
CACHE_TTL_MARKETS=300
CACHE_TTL_POSITIONS=60
CACHE_TTL_ANALYTICS=600
CACHE_TTL_USER_STATS=300

# =============================================================================
# WEBSOCKET CONFIGURATION
# =============================================================================

# WebSocket Port (if different from HTTP port)
WEBSOCKET_PORT=3002

# WebSocket Heartbeat Interval (ms)
WEBSOCKET_HEARTBEAT_INTERVAL=30000

# WebSocket Connection Timeout (ms)
WEBSOCKET_CONNECTION_TIMEOUT=300000

# =============================================================================
# HEALTH CHECK CONFIGURATION
# =============================================================================

# Health Check Interval (ms)
HEALTH_CHECK_INTERVAL=30000

# Health Check Timeout (ms)
HEALTH_CHECK_TIMEOUT=5000

# =============================================================================
# BACKUP CONFIGURATION (Optional)
# =============================================================================

# Database Backup
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=./backups

# =============================================================================
# NOTES
# =============================================================================

# 1. Replace all placeholder values with actual configuration
# 2. Keep sensitive data (private keys, passwords) secure
# 3. Use environment-specific values for different deployments
# 4. Regularly rotate secrets and API keys
# 5. Monitor and log configuration changes
