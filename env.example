# Pulse-08 Environment Configuration
# Copy this file to .env and configure your values

# =============================================================================
# ROOT CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# =============================================================================
# ROOTSTOCK CONFIGURATION
# =============================================================================
# Rootstock Network Configuration
ROOTSTOCK_NETWORK=testnet
ROOTSTOCK_RPC_URL=https://public-node.testnet.rsk.co
ROOTSTOCK_CHAIN_ID=31
ROOTSTOCK_EXPLORER_URL=https://explorer.testnet.rsk.co

# Rootstock Mainnet (Production)
# ROOTSTOCK_NETWORK=mainnet
# ROOTSTOCK_RPC_URL=https://public-node.rsk.co
# ROOTSTOCK_CHAIN_ID=30
# ROOTSTOCK_EXPLORER_URL=https://explorer.rsk.co

# =============================================================================
# THE GRAPH CONFIGURATION
# =============================================================================
# The Graph Network Configuration
THE_GRAPH_NETWORK=testnet
THE_GRAPH_SUBGRAPH_URL=https://api.thegraph.com/subgraphs/name/pulse-08/pulse-08-testnet
THE_GRAPH_INDEXER_URL=https://api.thegraph.com/indexer/graphql
THE_GRAPH_TOKEN_API_URL=https://api.thegraph.com/token-api

# The Graph Mainnet (Production)
# THE_GRAPH_NETWORK=mainnet
# THE_GRAPH_SUBGRAPH_URL=https://api.thegraph.com/subgraphs/name/pulse-08/pulse-08-mainnet
# THE_GRAPH_INDEXER_URL=https://api.thegraph.com/indexer/graphql
# THE_GRAPH_TOKEN_API_URL=https://api.thegraph.com/token-api

# =============================================================================
# BACKEND CONFIGURATION
# =============================================================================
BACKEND_PORT=3001
BACKEND_HOST=localhost
BACKEND_CORS_ORIGIN=http://localhost:3000

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/pulse08
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRES_IN=24h

# =============================================================================
# CONTRACT CONFIGURATION
# =============================================================================
# Contract Deployment Configuration
CONTRACT_DEPLOYER_PRIVATE_KEY=your-private-key
CONTRACT_GAS_LIMIT=8000000
CONTRACT_GAS_PRICE=20000000000

# Contract Addresses (will be set after deployment)
CLMSR_MARKET_CORE_ADDRESS=
CLMSR_POSITION_ADDRESS=
RBTC_TOKEN_ADDRESS=

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
FRONTEND_PORT=3000
FRONTEND_HOST=localhost
VITE_API_URL=http://localhost:3001
VITE_GRAPH_URL=https://api.thegraph.com/subgraphs/name/pulse-08/pulse-08-testnet
VITE_ROOTSTOCK_RPC_URL=https://public-node.testnet.rsk.co
VITE_ROOTSTOCK_CHAIN_ID=31

# =============================================================================
# SUBGRAPH CONFIGURATION
# =============================================================================
# Subgraph Deployment Configuration
SUBGRAPH_NAME=pulse-08-testnet
SUBGRAPH_VERSION=0.0.1
SUBGRAPH_DESCRIPTION="Pulse-08 Signals Protocol on Rootstock Testnet"

# Contract Addresses for Subgraph
SUBGRAPH_CLMSR_MARKET_CORE_ADDRESS=
SUBGRAPH_CLMSR_POSITION_ADDRESS=
SUBGRAPH_RBTC_TOKEN_ADDRESS=

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# API Security
API_RATE_LIMIT=100
API_RATE_WINDOW=900000

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
# Logging Configuration
LOG_FORMAT=json
LOG_FILE=logs/pulse-08.log

# Metrics Configuration
METRICS_ENABLED=true
METRICS_PORT=9090

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Development Tools
DEBUG_MODE=true
HOT_RELOAD=true
SOURCE_MAPS=true

# Testing Configuration
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/pulse08_test
TEST_REDIS_URL=redis://localhost:6379/1
